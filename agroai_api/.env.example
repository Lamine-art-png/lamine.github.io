# Database
DATABASE_URL=sqlite:///./agroai.db
# For production: postgresql://user:password@localhost:5432/agroai

# Security
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
WEBHOOK_SECRET=your-webhook-secret-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Observability
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Caching
CACHE_TTL_HOURS=6
IDEMPOTENCY_TTL_HOURS=24

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_METERING=true

# External Providers (mock adapters by default)
WISECONN_API_URL=http://mock-wiseconn
RAINBIRD_API_URL=http://mock-rainbird
OPENET_API_URL=http://mock-openet
